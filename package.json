{
  "name": "fituno",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:trainer": "yarn workspace @fituno/trainer-app dev",
    "dev:client": "yarn workspace @fituno/client-app start",
    "build:trainer": "yarn workspace @fituno/trainer-app build",
    "build:client": "yarn workspace @fituno/client-app build",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
